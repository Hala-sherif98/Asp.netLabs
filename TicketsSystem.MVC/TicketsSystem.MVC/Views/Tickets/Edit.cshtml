@using TicketsSystem.BL.ViewModels.Tickets;

@model EditTicket

<form asp-action="Edit" method="post">

    <div class="form-group mt-3">
        <input type="hidden" class="form-control" asp-for="Id" />
    </div>
    <div class="form-group m-2">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
    </div>

    <div class="form-group mt-3">
        <label asp-for="DepartmentId"></label>
        <input class="form-control" asp-for="DepartmentId" />
    </div>


        <div class="form-group mt-3">
        <label asp-for="Severity"></label>
        <select asp-for="Severity" asp-items="Html.GetEnumSelectList<Severity>()"></select>
    </div>

    <button class="btn btn-sucess"> Submit </button>

</form>
